{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON schema for the TypeScript compiler's configuration file",
    "type": "object",
    "properties": {
      "compilerOptions": {
        "type": "object",
        "properties": {}
      },
      "include": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "exclude": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "files": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }